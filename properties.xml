<!-- Define properties used in build.xml -->

<!-- General configuration -->

<property file="build.properties"/>

<property name="lib.path" value="lib" />
<property name="build.path" value="bin" />
<property name="jar.filename" value="chendra-${version}.jar" />
<property name="debug" value="on" />
<property name="src.main.gen.path" value="gen/java/main" />
<property name="src.main.path" value="src/java/main" />
<property name="src.test.gen.path" value="gen/java/test" />
<property name="src.test.path" value="src/java/test" />

<!-- Load user overrides -->
<property file="build.properties"/>
<property file="${user.home}/.build.properties"/>
<property file="${user.home}/.${ant.project.name}-build.properties"/>

<path id="compile.classpath">
	<fileset dir="${lib.path}" includes="*.jar"/>
	<fileset dir="${hadoop.home}" includes="${hadoop.core.jar}"/>
	<fileset dir="${hive.build.dir}" includes="${hive.serde.jar}"/>
	<fileset dir="${hive.build.dir}" includes="${hive.ql.jar}"/>
</path>
